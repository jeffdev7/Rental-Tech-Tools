@model IEnumerable<JagoRTT.domain.Entities.Company>

@{
    ViewData["Title"] = "Company";
}
@if (TempData["success"]!= null)
{
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}
<head>
            <script src="https://kit.fontawesome.com/ca515fdac4.js" crossorigin="anonymous"></script>
</head>
<br/>
<h3>Company</h3>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-building"></i> New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |*@
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
