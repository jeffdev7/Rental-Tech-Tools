@model IEnumerable<ToolVM>
@using JagoRTT.Application.ViewModel

@{
    ViewData["Title"] = "Tools";
}

<head>
            <script src="https://kit.fontawesome.com/ca515fdac4.js" crossorigin="anonymous"></script>
</head>
<br />
<h2>Tools</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-laptop"></i>New</a>
</p>
<table class="table">
    <thead>

        <tr>
            <th>
               Name
            </th>
            <th>
                Model
            </th>
            <th>
                Brand
            </th>
            <th>
                Quantity In Stock
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
