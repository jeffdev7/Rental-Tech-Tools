@model IEnumerable<RentalVM>
@using JagoRTT.Application.ViewModel


@{
    ViewData["Title"] = "Rentals";
}
@if (TempData["success"]!= null)
{
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}
<head>
            <script src="https://kit.fontawesome.com/ca515fdac4.js" crossorigin="anonymous"></script>
</head>
<br/>
<h3>Rentals</h3>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-exchange-alt"></i> New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Begin Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Price
            </th>
            <th>
                Type
            </th>
            <th>
                Tool
            </th>
            <th>
                Client
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Convert.ToDateTime(item.BeginDate).ToShortDateString()
            </td>
            <td>
                @Convert.ToDateTime(item.EndDate).ToString("MM-dd-yyyy HH:00")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CiaName)
            </td>
            <td>
               @* <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> *@
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
