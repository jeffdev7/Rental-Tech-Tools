@using JagoRTT.Application.ViewModel
@using JagoRTT.domain.Entities

@model Rental

<br/>

<h4>Add new rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label">Start date</label>
                <input asp-for="BeginDate" class="form-control" type="date" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End date</label>
                <input asp-for="EndDate" class="form-control" type="datetime-local"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@ViewBag.TypeOfRental" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToolId" class="control-label">Tool</label>
                <select asp-for="ToolId" class ="form-control" asp-items="ViewBag.ToolId">
                    <option value="0">Select</option>
                    @foreach(var item in ViewBag.Tools)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label">Company</label>
                <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId">
                     <option value="0">Select</option>
                    @foreach(var item in ViewBag.Companies)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
             <div class="form-group">
                <div>
                    <br/>
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn border-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
